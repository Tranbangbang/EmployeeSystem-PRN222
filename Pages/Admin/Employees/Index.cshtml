@page
@model EmployManager.Pages.Admin.Employees.IndexModel
@{
    ViewData["Title"] = "Quản lý nhân viên";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Quản lý nhân viên</h1>
        <a href="/Admin/Employees/Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i> Thêm nhân viên
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Mã NV</th>
                            <th>Họ và tên</th>
                            <th>Email</th>
                            <th>Phòng ban</th>
                            <th>Vai trò</th>
                            <th>Ngày vào làm</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model.Employees)
                        {
                            <tr>
                                <td>@employee.EmployeeCode</td>
                                <td>@employee.FullName</td>
                                <td>@employee.Email</td>
                                <td>@employee.Department?.Name</td>
                                <td>@employee.Role?.Name</td>
                                <td>@employee.HireDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @if (employee.IsActive)
                                    {
                                        <span class="badge bg-success">Đang hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Vô hiệu hóa</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a href="/Admin/Employees/Edit/@employee.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="/Admin/Employees/Details/@employee.Id" class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a href="/Admin/Employees/Delete/@employee.Id" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>