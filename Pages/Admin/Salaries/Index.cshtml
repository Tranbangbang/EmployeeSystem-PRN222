            const table = document.getElementById('salaryTable');
            const wb = XLSX.utils.table_to_book(table, { sheet: "Bảng lương" });
            XLSX.writeFile(wb, `Bảng_lương_T${@Model.Month}_${@Model.Year}.xlsx`);
        }
    </script>
}