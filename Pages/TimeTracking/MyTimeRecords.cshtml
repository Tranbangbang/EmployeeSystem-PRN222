@page
@model EmployManager.Pages.TimeTracking.MyTimeRecordsModel
@{
    ViewData["Title"] = "Lịch sử chấm công";
}

<div class="container-fluid py-4">
    <h1 class="h3 mb-4">Lịch sử chấm công</h1>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="month" class="form-label">Tháng</label>
                    <select id="month" name="month" class="form-select" onchange="this.form.submit()">
                        @for (int i = 1; i <= 12; i++)
                        {
                            <option value="@i" selected="@(i == Model.Month)">Tháng @i</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="year" class="form-label">Năm</label>
                    <select id="year" name="year" class="form-select" onchange="this.form.submit()">
                        @for (int i = DateTime.Now.Year - 5; i <= DateTime.Now.Year; i++)
                        {
                            <option value="@i" selected="@(i == Model.Year)">@i</option>
                        }
                    </select>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Ngày</th>
                            <th>Giờ vào</th>
                            <th>Giờ ra</th>
                            <th>Số giờ làm việc</th>
                            <th>Ghi chú</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.TimeRecords.Count == 0)
                        {
                            <tr>
                                <td colspan="5" class="text-center py-4">Không có dữ liệu chấm công trong tháng này</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var record in Model.TimeRecords)
                            {
                                <tr>
                                    <td>@record.CheckInTime.ToString("dd/MM/yyyy")</td>
                                    <td>@record.CheckInTime.ToString("HH:mm:ss")</td>
                                    <td>
                                        @if (record.CheckOutTime.HasValue)
                                        {
                                            @record.CheckOutTime.Value.ToString("HH:mm:ss")
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">Chưa check-out</span>
                                        }
                                    </td>
                                    <td>
                                        @if (record.CheckOutTime.HasValue)
                                        {
                                            @record.WorkHours.ToString("F2") <span>giờ</span>
                                        }
                                        else
                                        {
                                            <span>-</span>
                                        }
                                    </td>
                                    <td>@record.Notes</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>